<?xml version="1.0" encoding="utf-8"?>
<!-- themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.MadCamp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>

        <item name="android:textColorPrimary">#212121</item> <item name="android:textColor">#424242</item>

        <!-- 버튼 색상 커스터마이징 -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomPositiveButton</item>
    </style>

    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/bottom_nav_selected_background</item>
    </style>

    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF3B30</item>
    </style>

    <style name="Theme.MadCamp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/jua_regular</item>
        <item name="android:textColorHint">@color/hint_text_color</item>

        <item name="android:statusBarColor">@color/bottom_nav_selected_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
