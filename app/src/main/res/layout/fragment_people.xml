<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/people_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".people.PeopleFragment"
    android:background="@color/background">

    <!-- + 버튼 (상단 고정) -->
    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_add"
        android:contentDescription="사람 추가"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/navigation"
        android:scaleType="center" />

    <!-- RecyclerView + 안내 메시지 겹치기 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_people_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <!-- 안내 메시지 (정중앙) -->
        <TextView
            android:id="@+id/tv_empty_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 사람이 없습니다.\n사람을 추가해주세요."
            android:textSize="16sp"
            android:textColor="#888888"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>
