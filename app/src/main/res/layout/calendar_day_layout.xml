<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp">

        <View
            android:id="@+id/today_background_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/calendar_today_background"
            android:visibility="gone" />

        <TextView
            android:id="@+id/calendar_day_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/calendar_day_selection_background"/>

    </FrameLayout>
    <View
        android:id="@+id/calendar_day_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/calendar_dot_background"
        android:visibility="invisible" />

</LinearLayout>