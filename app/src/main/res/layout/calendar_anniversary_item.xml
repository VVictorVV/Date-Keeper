<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/calendar_anniversary_rounded_background">

    <ImageView
        android:id="@+id/anniversary_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/anniversary_dday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-10"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <CheckBox
        android:id="@+id/checkbox_anniversary_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_toStartOf="@id/anniversary_dday_text"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/anniversary_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="홍길동님의 생일"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/anniversary_icon"
        android:layout_toStartOf="@id/checkbox_anniversary_select"
        android:layout_alignTop="@id/anniversary_icon"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/anniversary_gift_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선물: 케이크"
        android:textSize="14sp"
        android:layout_below="@id/anniversary_name_text"
        android:layout_alignStart="@id/anniversary_name_text" />

</RelativeLayout>