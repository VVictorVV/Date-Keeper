<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- + 버튼 (오른쪽 상단 고정) -->
    <ImageButton
        android:id="@+id/btnAddPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:contentDescription="추억 추가"
        android:src="@drawable/ic_add"
        android:background="@color/navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ViewPager + 화살표 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/gallery_leftarrow"
            android:visibility="gone"
            app:tint="#000000"
            app:layout_constraintStart_toStartOf="@+id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            android:layout_marginStart="4dp" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/gallery_rightarrow"
            android:visibility="gone"
            app:tint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            android:layout_marginEnd="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 사진 없을 때 표시 -->
    <TextView
        android:id="@+id/tvNoPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 사진이 없습니다."
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
