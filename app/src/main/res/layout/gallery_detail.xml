<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- + 버튼 (오른쪽 상단 고정) -->
    <ImageButton
        android:id="@+id/btnAddPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:contentDescription="추억 추가"
        android:src="@drawable/ic_add"
        android:background="@color/navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ViewPager2 (화살표 포함) -->
    <FrameLayout
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="@color/my_pink"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|start"
            android:background="@drawable/round_button_background"
            android:src="@drawable/gallery_leftarrow_white"
            android:visibility="gone"
            android:translationX="20dp" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/round_button_background"
            android:src="@drawable/gallery_rightarrow_white"
            android:visibility="gone"
            android:translationX="-20dp" />
    </FrameLayout>

    <!-- 사진 없을 때 표시 -->
    <TextView
        android:id="@+id/tvNoPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소중한 추억을 기록해보세요!"
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
