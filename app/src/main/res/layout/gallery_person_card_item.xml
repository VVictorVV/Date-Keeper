<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/album_card_background">

        <!-- 대표 아이콘 -->
        <ImageView
            android:id="@+id/card_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dogtest"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_white_background"
            android:padding="8dp"
            android:elevation="4dp" />

        <!-- 별명 -->
        <TextView
            android:id="@+id/memory_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별명"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"/>

        <!-- 사진 개수 -->
        <TextView
            android:id="@+id/memory_card_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2장"
            android:textSize="14sp"
            android:textColor="#888888"
            android:drawableStart="@drawable/gallery_image"
            android:drawablePadding="4dp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
